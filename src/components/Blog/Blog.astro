---
import "./Blog.css";

const { blogs } = Astro.props;

const patterns = [
        "firstPattern","secendPattern","thirdPattern","fourthPatter"
];



---
<div id="blog">
                <div id="blogText" data-aos="fade-up">
                        <h1 class="blogHeaderText">BLOG</h1>
                </div>
            <div id="blogContainer">
                {blogs.map((x,i) => {
                    let randomInt = Math.floor(Math.random() * patterns.length)
                    let patternStyle = patterns[randomInt];
                    return ( 
                    <div id={x.title} class={x.lang === "en" ? "EN blogs " + patternStyle : "AR blogs " + patternStyle} data-aos="fade-up" data-aos-anchor-placement="top-bottom" data-aos-duration="2500">
                        <div class="blogImage">
                            <div class="blogImageContainer" data-aos="fade-left" data-aos-duration="1000">
                                {randomInt === 0 ?
                                    <img src={x.image} alt="blogImage" class="blogImagesDesign"/>
                                    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="blogBlob">
                                        <path fill="#FF2C62" d="M49.6,-51C62.3,-36.8,69.4,-18.4,68.3,-1.1C67.2,16.2,57.9,32.4,45.1,46.5C32.4,60.6,16.2,72.7,0.2,72.5C-15.9,72.4,-31.8,60,-40.6,45.9C-49.4,31.8,-51.1,15.9,-54.9,-3.8C-58.7,-23.5,-64.6,-47,-55.8,-61.1C-47,-75.3,-23.5,-80.2,-2.5,-77.7C18.4,-75.2,36.8,-65.2,49.6,-51Z" transform="translate(100 100)" />
                                    </svg> : randomInt === 1 ? 
                                    <img src={x.image} alt="blogImage" class="blogImagesDesign"/>
                                    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="blogBlob">
                                        <path fill="#8A3FFC" d="M49.8,-46.7C60.1,-39.4,61.1,-19.7,60.6,-0.5C60.1,18.7,58,37.4,47.7,44.7C37.4,52,18.7,47.9,-1.9,49.8C-22.4,51.7,-44.8,59.4,-51.3,52.1C-57.7,44.8,-48.2,22.4,-42.1,6.1C-36,-10.2,-33.3,-20.4,-26.9,-27.7C-20.4,-34.9,-10.2,-39.1,4.8,-43.9C19.7,-48.6,39.4,-53.9,49.8,-46.7Z" transform="translate(100 100)" />
                                    </svg> : randomInt === 2 ?
                                    <img src={x.image} alt="blogImage" class="blogImagesDesign"/>
                                    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="blogBlob">
                                        <path fill="#9EF0F0" d="M43,-50.3C52,-34.1,52.7,-17.1,55.4,2.7C58.1,22.4,62.7,44.9,53.8,59C44.9,73.1,22.4,78.8,5,73.8C-12.4,68.8,-24.8,53,-36.1,38.9C-47.3,24.8,-57.4,12.4,-58.6,-1.2C-59.7,-14.7,-51.9,-29.4,-40.7,-45.6C-29.4,-61.8,-14.7,-79.5,1.2,-80.7C17.1,-81.8,34.1,-66.5,43,-50.3Z" transform="translate(100 100)" />
                                    </svg> : 
                                    <img src={x.image} alt="blogImage" class="blogImagesDesign"/>
                                    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="blogBlob">
                                        <path fill="#E8DAFF" d="M60.2,-55C73.4,-47,76.4,-23.5,71.4,-5C66.3,13.4,53.3,26.8,40,40.2C26.8,53.6,13.4,67,-5,72C-23.4,77.1,-46.8,73.7,-57,60.3C-67.2,46.8,-64.2,23.4,-61.3,2.9C-58.3,-17.5,-55.5,-35.1,-45.3,-43.1C-35.1,-51.1,-17.5,-49.5,3,-52.5C23.5,-55.5,47,-63,60.2,-55Z" transform="translate(100 100)" />
                                    </svg>
                                }
                                
                            </div>
                        </div>
                        <div class="blogTextContainer">
                            <div class="blogText" data-aos="fade-right" data-aos-duration="1000">
                                <section>
                                    <h2 class="blogTextHeader">{x.title}</h2>
                                </section>
                                <h3 class="blogTextFont">{x.description}</h3>
                            </div>
                            <div class="blogButtonContainer">
                                <button class="blogButton"><a href={`${x.url}`}>More</a></button>
                            </div>
                        </div>
                    </div>
                    )
                })}
            </div>
</div>