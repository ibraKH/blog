---
import "./Navbar.css"

const { color = "yellow" } = Astro.props;


---
<div id="navbarBigScreen" class={color === "yellow" ? "yellowBackground" : "whiteBackground"}>
    <div id="navbarIconsContainer" data-aos="fade-right"> 
        <div id="socialIconsContainer">
            <div id="telegram" class="socialIcons">
                <a href="https://t.me/CEibra" target={"_blank"} aria-label="telegram"><img src="/images/icons/telegram.webp"/></a>
            </div>
            <div id="twitter" class="socialIcons">
                <a href="https://twitter.com/IGsibra" target={"_blank"} aria-label="twitter"><img src="/images/icons/twitter.webp"/></a>
            </div>
            <div id="github" class="socialIcons">
                <a href="https://github.com/ibraKH" target={"_blank"} aria-label="github"><img src="/images/icons/github.webp"/></a>
            </div>
        </div>
    </div>
</div>